<Window x:Class="ImageEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Editor" Height="600" Width="800" Background="#353536">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            <Button x:Name="openButton" Content="Open" Height="20"  Click="openButton_Click" Margin="5" Background="White"/>
            <Button x:Name="saveButton" Content="Save" Height="20" Click="saveButton_Click" Margin="5" Background="White"/>
            <Button x:Name="undoButton" Content="Undo" Height="20" Click="undoButton_Click" Margin="5" Background="White"/>
        </StackPanel>

        <Viewbox Grid.Column="1" Margin="0,0,0,40">
            <ScrollViewer x:Name="imageScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Image x:Name="editedImage" Stretch="None" MouseWheel="editedImage_MouseWheel"/>
            </ScrollViewer>
        </Viewbox>
        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" Margin="10,10,0,10" MaxWidth="140">
            <Button x:Name="cropButton" Content="Crop" Click="cropButton_Click" Height="40" Width="120" Margin="5,30, 5, 5" Background="White"/>
            <Button x:Name="rotateButton" Content="Rotate" Click="rotateButton_Click" Height="40" Width="120" Margin="5" Background="White"/>
            <Button x:Name="filterButton" Content="Filter" Click="filterButton_Click" Height="40" Width="120" Margin="5" Background="White"/>
            <Slider x:Name="brightnessSlider" Minimum="-100" Maximum="100" Width="120" ValueChanged="brightnessSlider_ValueChanged" />
            <ComboBox x:Name ="filters" Width="120" Margin="5" SelectionChanged="filters_SelectionChanged"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10">
            <Slider x:Name="zoomSlider" Minimum="-5" Maximum="7" TickFrequency="0.5" TickPlacement="BottomRight" Width="150" ValueChanged="zoomSlider_ValueChanged"/>
        </StackPanel>
    </Grid>
</Window>